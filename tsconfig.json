{
  "compilerOptions": {
    "jsx": "react-jsx", // ou "react" si vous utilisez une version plus ancienne de React
    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
